
                  <div class="panel-footer" data-postid="{{ $post->id }}">
                      @php
                          $i = Auth::user()->likes()->count();
                          $c = 1;
                          $likeCount = $post->likes()->where('like', '=', true)->count();
                          $commentCount = $post->comments()->where('comment', '!=', null)->count();
                      @endphp
                      @foreach (Auth::user()->likes as $like)
                          @if ($like->post_id == $post->id)
                              @if ($like->like)
                                  

                                  <a href="#" class="btn btn-link like">
                              <i class="fa fa-heart-o like" style="margin-right: 5px"></i>
                              {{ $likeCount }}
                            </a>
                                  
                              @else
                                  <a href="#" class="btn btn-link like">
                                    <i class="fa fa-heart-o like" style="margin-right: 5px"></i>
                                    {{ $likeCount }}
                                  </a>
                                  
                              @endif
                              @break
                          @elseif ($i == $c)
                            <a href="#" class="btn btn-link like">
                              <i class="fa fa-heart-o like" style="margin-right: 5px"></i>
                              {{ $likeCount }}
                            </a>
                              
                          @endif
                          @php
                              $c++;
                          @endphp
                      @endforeach
                      @if ($i == 0)

                        <a href="#" class="btn btn-link like">
                          <i class="fa fa-heart-o like" style="margin-right: 5px"></i>
                          {{ $likeCount }}
                        </a>
                          
                      @endif

                      <a href="{{ route('post.show', [$post->id]) }}" class="btn btn-link">
                        <i class="fa fa-comment" style="margin-right: 5px"></i> {{ $commentCount }}
                      </a>
                  </div>